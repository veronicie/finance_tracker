<% if @stock %>
  <div class="card mt-3 mx-0" style="width: 18rem;">
    <div class="card-header">
      <strong>Symbol: </strong> <%= @stock.ticker  %>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item"> <strong>Name: </strong> <%= @stock.name  %> </li>
      <li class="list-group-item"> <strong>Price: </strong> <%= @stock.last_price  %> </li>
      <li class="list-group-item"> <%= link_to 'Add to portfolio', user_stocks_path(user: current_user, ticker: @stock.ticker), class: 'btn btn-xs btn-success', method: :post  %> </li>
    </ul>
  </div>
<% end %>
