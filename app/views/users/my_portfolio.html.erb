<h1>My Portfolio</h1>

<div class="pt-3">
  <h3>Search stocks</h3>

  <%= form_tag search_stock_path, method: :get do %>
    <div class="form-group row">
      <%# <input type="text" class="form-control col-sm-9" placeholder="Username" aria-label="Username" aria-describedby="addon-wrapping"> %>
      <div class="col-sm-9 px-0">
        <%= text_field_tag :stock, params[:stock], placeholder: 'Stock ticker symbol', autofocus: true, class: 'form-control form-control-lg' %>
      </div>
      <div class="col-sm-3 px-0">
        <%= button_tag type: :submit, class: 'btn btn-success' do %>
          <%= fa_icon "search 2x" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<% if @stock %>
  <div class="card mt-3 mx-0" style="width: 18rem;">
    <div class="card-header">
      <strong>Symbol: </strong> <%= @stock.ticker  %>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item"> <strong>Name: </strong> <%= @stock.name  %> </li>
      <li class="list-group-item"> <strong>Price: </strong> <%= @stock.last_price  %> </li>
    </ul>
  </div>
<% end %>
