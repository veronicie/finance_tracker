<div class="row mt-4">
  <div class="col-9">
    <table class="table table-striped table-hover ">
      <thead>
        <tr>
          <th scope="col">First Name</th>
          <th scope="col">Last Name</th>
          <th scope="col">E-mail</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @friends.each do |friend| %>
          <tr>
            <td> <%= friend.first_name %> </td>
            <td> <%= friend.last_name %> </td>
            <td> <%= friend.email %> </td>
            <td> 
              <%= link_to 'View profile', user_path(friend), class: 'btn btn-sm btn-warning'  %>
              <%= link_to 'Stop following', friendship_path(friend), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-sm btn-outline-warning' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
